<script type="text/javascript">






var currenttime;
  
  
  
  function senDatatModal(action)
  {
	  document.getElementById("btnmodal").id=action;
  }
  
function myFunction(id) {
	
	var checkedValue = $('.radio:checked').val();
	
	
    $.ajax
    (
    {
    	
        url:"/Client2",
        type:'post',
        data:{checkedValue:checkedValue,id:id},
        success:function(data){
        	
        	//alert(id);
        	$("#row"+checkedValue).css("display", "none");
        //	$("#row"+checkedValue).on('click', function(){
      		//  $(this).closest('tr').hide();
      		//});
      	
        	
        	//alert("Are You Sure!");
        
             
        
        },
        error:function(){alert('error');}
       
    }
);
}
var code;
var page = 1;
var retn;
var getId;
$(function () {
    $("#more").click(function () {
    
    	page = page+1;
    	
    });
});
  
	function formsubmit(event ,id){
		 		     
 $.ajax({
        	
         url:"/Client",
         type:"post",
         data:{name:page,id},
         
         success:function(data){
        
         //alert(data);
        	   // 	alert(data);
        	       	var text = JSON.parse(data);
        	 //      	alert(text.data);
        	     //  	var obj = JSON.parse(text);
        	     //  	var text1 = JSON.stringify(obj.data);
        	      // 	var obj1 = JSON.parse(text1);
          
          code = "<table id='record_table' border='2' style='border-collapse: collapse;' width='100%''><thead><th>Select</th><th>Time Stamp &nbsp&nbsp&nbsp</th><th>Tutor Contact</th><th>&nbsp&nbsp&nbsp&nbspCLasses</th><th>Date</th><th>Emp Id</th><th>Emp Name&nbsp&nbsp&nbsp&nbsp</th><th>Message</th><th style='text-align: center; vertical-align: middle;'>Notify to</th><th style='text-align: center; vertical-align: middle;'>Payment</th><th style='text-align: center; vertical-align: middle;'>Time</th></thead><tbody>"
          
         for(var i=0;i<text.data.length;i++)
        	 
        	 { 
        	var obj= JSON.stringify(text.data[i]);
           //	alert(obj);
    	     
        	var obj1 = JSON.parse(obj);
           //	alert(obj1);
    	   
        	 code+="<tr id='row"+obj1.Currenttimestamp+"'><td><input  type='radio' name='button' class='radio' value='"+obj1.Currenttimestamp+"'></td><td style='text-align: center; vertical-align: middle;'>"+obj1.Currenttimestamp+"</td><td style='text-align: center; vertical-align: middle;'>"+obj1.Timestamp+"</td><td style='text-align: center; vertical-align: middle;'>"+obj1.Tutor_contact+"</td><td style='text-align: center; vertical-align: middle;'>"+obj1.Date+"</td><td style='text-align: center; vertical-align: middle;'>"+obj1.Emp_id+"</td><td style='text-align: center; vertical-align: middle;'>"+obj1.Emp_name+"</td><td style='text-align: center; vertical-align: middle;'>"+obj1.Message+"</td><td style='text-align: center; vertical-align: middle;'>"+obj1.Notifyto+"</td><td style='text-align: center; vertical-align: middle;'>"+obj1.Payment_status+"</td><td style='text-align: center; vertical-align: middle;'>"+obj1.Time+"</td></tr>";
        	 retn=obj1.page;
        	 
        	// getId = obj1.id;
        	// alert(getId);
        	 $(document).ready(function() {
        		    $('#record_table tr').click(function(event) {
        		        if (event.target.type !== 'radio') {
        		            $(':radio', this).trigger('click');
        		        }
        		    });
        		});

        	
        	
        	
        	
        	 }
          code+="</tbody></table>"        	 
        	 document.getElementById("show").innerHTML = code;
          //document.getElementById("more").innerHTML = getId;
          
          if(retn!=1)
     	 {
      $('#extra').append(code);    
     	 }  
         
       	return false;
            
         }
         
        });
 return false;
	}
	 </script>
